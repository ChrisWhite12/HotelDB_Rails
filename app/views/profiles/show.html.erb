<div class="profile_form">
    <div class="personal_field">
        <div class="profile_data">First Name: <%= @profile[:fname]%></div>
        <div class="profile_data">Last Name: <%= @profile[:lname]%></div>
        <div class="profile_data">Phone: <%= @profile[:phone]%></div>
    </div>
    <h3 class="form_title_payment">Payment Details</h3>
    <div class="payment_field">
        <div class="profile_data">Card No.: ****<%= @profile.payment[:card_no].to_s.slice(-4,4)%></div>
    </div>
    <h3 class="form_title_address">Address Details</h3>
    <div class="address_field">
        <div class="profile_data">Street No.: <%= @profile.address[:street_no]%></div>
        <div class="profile_data">Street Name: <%= @profile.address[:street_name]%></div>
        <div class="profile_data">Suburb: <%= @profile.address[:suburb]%></div>
        <div class="profile_data">State: <%= @profile.address[:state]%></div>
        <div class="profile_data">Postcode: <%= @profile.address[:postcode]%></div>
    </div>
    <div class="profile_edit_btn">
        <%= link_to "Edit Profile", edit_profile_path(Profile.find_by(user_id: current_user[:id]))%>
    </div>
</div>
