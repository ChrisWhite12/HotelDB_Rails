<h1>Home Page</h1>
<form action = "<%=search_path%>" method = "GET">
    <div>
        <label>Location: </label>
        <input type="text">
    </div>
    <div>
        <label>People: </label>
        <input type="number" step="1" min="1" max="4">
    </div>
    <div>
        <label>From: </label>
        <input type="date">
    </div>
    <div>
        <label>To: </label>
        <input type="date">
    </div>
    <input type="submit" value="Search">
</form>