<%= form_with(model: @profile, local: true, class: "profile_form")  do |form| %>
    <div class="personal_field">
        <div class="profile_data">
            <%= form.label :fname, value: "First Name"%>
            <%= form.text_field :fname%>
        </div>
        <div class="profile_data">
            <%= form.label :lname, value: "Surname"%>
            <%= form.text_field :lname%>
        </div>
        <div class="profile_data">
            <%= form.label :phone %>
            <%= form.text_field :phone%>
        </div>
    </div>
    <h3 class="form_title_payment">Payment Details</h3>
    <div class="payment_field">
        
        <%= form.fields_for @payment do |pay_form|%>
            <div class="profile_data">
                <%= pay_form.label :card_no %>
                <%= pay_form.text_field :card_no %>
            </div>
            <div class="profile_data">
                <%= pay_form.label :card_name %>
                <%= pay_form.text_field :card_name %>
            </div>
            <div class="profile_data">
                <%= pay_form.label :CSV %>
                <%= pay_form.text_field :CSV %>
            </div>
            <div class="profile_data">
                <%= pay_form.label :expiry %>
                <%= pay_form.text_field :expiry %>
            </div>
        <% end %>
    </div>
    <h3 class="form_title_address">Address Details</h3>
    <div class="address_field">
        
        <%= form.fields_for @address do |add_form|%>
            
            <div class="profile_data">
                <%= add_form.label :street_no %>
                <%= add_form.text_field :street_no %>
            </div>
            <div class="profile_data">
                <%= add_form.label :street_name %>
                <%= add_form.text_field :street_name %>
            </div>
            <div class="profile_data">
                <%= add_form.label :suburb %>
                <%= add_form.text_field :suburb %>
            </div>
            <div class="profile_data">
                <%= add_form.label :state %>
                <%= add_form.text_field :state %>
            </div>
            <div class="profile_data">
                <%= add_form.label :postcode %>
                <%= add_form.text_field :postcode %>
            </div>
            
        <% end %>
    </div>
    <div>
    <% if can? :edit, User %>
        <%= form.fields_for @user do |user_form|%>
            <%= user_form.label :admin %>
            <%= user_form.select :admin, [["Customer", 1],["Seller", 2],["Admin", 3]]%>
        <% end %>
    <% end %>
    </div>

    <div>
    <%= form.submit %>
    </div>
<% end %>